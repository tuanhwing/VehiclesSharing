<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/temp"
        android:id="@+id/imgHistoryImage"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="FullName"
        android:id="@+id/txtHistoryFullName"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="source location"
            android:drawableLeft="@drawable/ic_place_blue_grey_600_24dp"
            android:id="@+id/txtHistoryLocationStart"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Destincation location"
            android:drawableLeft="@drawable/ic_directions_blue_grey_600_24dp"
            android:id="@+id/txtHistoryLocationEnd"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="time"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_alarm_blue_grey_600_24dp"
            android:id="@+id/txtHistoryDayOfTrip"
            />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_directions_car_indigo_a700_24dp"
                    />
            </LinearLayout>

        </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtHistoryComment"
                android:visibility="gone"
                />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See rating"
        android:id="@+id/btnSeeRating"
        />
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rbHistory"
        style="@style/Widget.AppCompat.RatingBar.Small"
        />
    </LinearLayout>

</LinearLayout>
