<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

        <TextView
                android:id="@+id/txtNeederDialogTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="50px"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/background_color"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <fragment
                        android:id="@+id/place_autocomplete_curneeder_fragment"
                        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"/>

                    <EditText
                        android:id="@+id/txtCurLocate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="20"
                        android:hint="Current location" />

                    <ImageView
                        android:id="@+id/imgClearCurNeederLocation"
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_clear_blue_grey_500_36dp" />
                </TableRow>

                <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <fragment
                    android:id="@+id/place_autocomplete_destin_fragment"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                    />
                <EditText
                    android:id="@+id/txtDesLocate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:layout_span="20"
                    android:hint="Destination location" />
                <ImageView
                    android:id="@+id/imgClearDesNeederLocation"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_clear_blue_grey_500_36dp" />
            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtTimeStart"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:drawableLeft="@drawable/ic_alarm_blue_grey_500_36dp"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:textSize="18dp" />
            </LinearLayout>
        </TableLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/background_color"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnNeederAddOK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:text="OK"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:background="@color/background_color" />

                <Button
                    android:id="@+id/btnAddNeederCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:text="Cancel"
                    android:textColor="@color/black"/>
            </LinearLayout>
</LinearLayout>
